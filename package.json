{
    "name": "react-graphql-workshop",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "tslint": "tslint './src/**/*.{ts,tsx}'",
        "tslint:fix": "npm run tslint -- -p ./tsconfig.json -c ./tslint.json --fix",
        "prettier": "prettier --write --config ./.prettierrc './src/**/*.{ts,tsx,html,css}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,html,css}": [
            "tslint -p ./tsconfig.json -c ./tslint.json --fix",
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "dependencies": {
        "react": "16.8.3",
        "react-dom": "16.8.3",
        "react-scripts": "2.1.5",
        "typescript": "3.3.3333"
    },
    "devDependencies": {
        "@types/jest": "24.0.6",
        "@types/node": "11.9.5",
        "@types/react": "16.8.4",
        "@types/react-dom": "16.8.2",
        "husky": "1.3.1",
        "lint-staged": "8.1.4",
        "prettier": "1.16.4",
        "tslint": "5.13.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "3.6.0"
    }
}
